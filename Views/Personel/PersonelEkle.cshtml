@model İnsanK.Models.TblPersonel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}
@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post))
{
    <h2>PersonelEkle</h2>
<br />

<form class="form-group" metod="post">
    <div style="margin-bottom:15px">
        @Html.HiddenFor(y => y.Personelİd)
        @Html.LabelFor(x => x.Adı)
        @Html.TextBoxFor(x => x.Adı, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.Soyadı)
        @Html.TextBoxFor(x => x.Soyadı, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.Tcno)
        @Html.TextBoxFor(x => x.Tcno, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.Telno)
        @Html.TextBoxFor(x => x.Telno, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.Görev)
        @Html.TextBoxFor(x => x.Görev, new { @class = "form-control" })
    </div>
    <button class="btn btn-info">Kaydet</button>
</form>
}

